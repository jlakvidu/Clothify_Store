<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="314.0" prefWidth="473.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="controller.ResetPasswordFormController">
    <children>
        <Label layoutX="50" layoutY="20" text="Reset Password" />
        <Label layoutX="50" layoutY="60" text="Enter OTP:" />
        <TextField fx:id="txtOTP" layoutX="150" layoutY="60" promptText="Enter OTP" />
        <Label layoutX="50" layoutY="100" text="New Password:" />
        <PasswordField fx:id="txtNewPassword" layoutX="150" layoutY="100" promptText="New Password" />
        <Button layoutX="150" layoutY="140" onAction="#btnResetPWOnAction" text="Reset Password" />
    </children>
</AnchorPane>
